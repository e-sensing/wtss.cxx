#define __WTSS_CXX_WTSS_CXX_VERSION_HPP__

//! Major version of TWS (or version).
#define TWS_VERSION_MAJOR @TWS_VERSION_MAJOR@

//! Minor version of TWS (or revision).
#define TWS_VERSION_MINOR @TWS_VERSION_MINOR@

//! Patched version of TWS (or patch).
